<Page x:Class="WpfApp10.APPPage.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp10.APPPage"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <StackPanel Margin="20,20,20,20"  HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <ComboBox Width="250" Height="44" x:Name="idkBox" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem Content="BmclAPI（镜像源）"/>
                <ComboBoxItem Content="MoJang（官方源"/>
            </ComboBox>
            <ui:ProgressBar x:Name="VVV" Width="250" Height="30"/>
            <TextBox x:Name="VersionName" Width="250" Height="44"/>
            <Button Content="搜索并下载此核心" Width="250" Height="44" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
