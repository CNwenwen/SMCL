<Page x:Class="WpfApp10.Page.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp10.Page"
      mc:Ignorable="d" 
       xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
       xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <ikw:SimpleStackPanel Margin="20,20,20,20" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Label MaxWidth="1000" Height="44" x:Name="Progress" Width="250"/>
            <ui:ProgressBar x:Name="VVV" Width="250" Height="30"/>
            <Button FontSize="18" Content="启动 Minecraft" Width="250" Height="44" Click="Button_Click"/>
        </ikw:SimpleStackPanel>
    </Grid>
</Page>
